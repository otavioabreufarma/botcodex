# Segurança geral
API_KEY=sua_api_key_super_secreta

# Banco PostgreSQL externo (obrigatório)
DATABASE_URL=postgresql://usuario:senha@host:5432/banco
PG_SSL=true

# URL pública da API (HTTPS na Discloud)
PUBLIC_BASE_URL=https://meu-subdominio.discloud.app

# InfinitePay
INFINITEPAY_WEBHOOK_SECRET=seu_webhook_secret

# Chaves dos servidores Rust
RUST1_SERVER_KEY=chave_rust_1
RUST2_SERVER_KEY=chave_rust_2

# Opcional: endpoints específicos para sync (se não definir, usa PUBLIC_BASE_URL)
RUST1_SYNC_URL=https://meu-subdominio.discloud.app/api/rust1/sync-vip
RUST2_SYNC_URL=https://meu-subdominio.discloud.app/api/rust2/sync-vip
